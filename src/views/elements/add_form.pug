.row.main-container
    .groups.col-1.d-none.d-sm-block
    .todos.col-12.col-lg-10
        .card
            .card-body
                form.form-todo-add.input-group
                    input.input-todo-task.form-control(type='text' placeholder='Add Task')
                    .input-group-text Priority:
                    .input-group-append
                        select.select-todo-priority.custom-select
                            option(value=2) High
                            option(value=1 selected=true) Normal
                            option(value=0) Low
                        button.add-btn.btn.btn-outline-secondary(type='submit' name="action")
                            svg(width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
